<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
  </form>
  <a href="/songs/<%=oneSong.id%>/edit"><button type="button" name="button" class="edit-button">Edit Song</button></a>
  <form action="/playlist/<%=oneSong._id%>?_method=DELETE" method="POST">
          <button class="delete-button">Delete Playlist</button>
        </form>

    <p>Artist: <%= oneSong.artist %> </p>
    <p>Song: <%= oneSong.song %> </p>
    <p>Length: <%= oneSong.length %> </p>
    <p>Writer: <%= oneSong.written_by %> </p>
    <p>Writer: <%= oneSong.lyrics %> </p>

    <% for (let playlist of playlists) { %>
      <p><strong><%= playlist.url %></strong> - <%= playlist.submitted_by %></p>
    <% } %>

    <h5>Add a playlist!</h5>

    <form action='/songs' method='post'>
      <input type='text' name='artist' placeholder='Artist' />
      <input type='text' name='song' placeholder='Song' />
      <input type='hidden' name='playlist' value='<%= oneSong._id %>' />
      <button type='submit'>Add Song</button>

      <a href="/playlist">Back</a>
  </body>
</html>
